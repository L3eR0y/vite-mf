{
  "compilerOptions": {
    "baseUrl": "./",
    "typeRoots": [
      "src/types"
    ],
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["types/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true
  }
}
